import timeit
import matplotlib.pyplot as plt


def fact_recursive(n: int) -> int:
    """Рекурсивный способ вычисления факториала."""
    if n == 0:
        return 1
    return n * fact_recursive(n - 1)


def fact_iterative(n: int) -> int:
    """Нерекурсивный способ вычисления факториала."""
    res = 1
    for i in range(1, n + 1):
        res *= i
    return res


def benchmark(func, n, number=1, repeat=5):
    """
    Возвращает среднее время выполнения одного вызова func(n).

    Параметры
    func
        Тестируемая функция.
    n : int
        Входное значение.
    number : int
        Количество вызовов в одном измерении (по умолчанию 1).
    repeat : int
        Количество повторов измерения для усреднения (по умолчанию 5).
    """
    times = timeit.repeat(lambda: func(n), number=number, repeat=repeat)
    return sum(times) / len(times)


def main():
    """Бенчмарк и график"""
    test_data = list(range(0, 500, 25))
    res_recursive = []
    res_iterative = []

    for n in test_data:
        res_recursive.append(benchmark(fact_recursive, n))
        res_iterative.append(benchmark(fact_iterative, n))

    plt.plot(test_data, res_recursive, label="Рекурсивный")
    plt.plot(test_data, res_iterative, label="Нерекурсивный")
    plt.xlabel("n")
    plt.ylabel("Время (сек)")
    plt.title("Сравнение рекурсивного и нерекурсивного факториала (чистый бенчмарк)")
    plt.legend()
    plt.grid(True)
    plt.show()


if __name__ == "__main__":
    main()
